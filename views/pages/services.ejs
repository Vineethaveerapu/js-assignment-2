<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main class="services-page">
      <div class="services-hero">
        <h1><%= locals.pageData.services.title %></h1>
        <p class="tagline"><%= locals.pageData.services.tagline %></p>
        <p class="description"><%= locals.pageData.services.description %></p>
      </div>

      <section class="services-grid">
        <% if (locals.services && locals.services.length > 0) { %> <%
        locals.services.forEach(service => { %>
        <%- include('../partials/service-card', { service }) %>
        <% }); %>
        <% } else { %>
        <p class="no-services">No services available at the moment.</p>
        <% } %>
      </section>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
