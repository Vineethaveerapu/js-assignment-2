<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main class="about-page">
      <% if (isMain) { %>
      <h1><%= pageData.about.title %></h1>
      <section>
        <p><%= pageData.about.description %></p>
      </section>
      <section>
        <h2>Our Team</h2>
        <ul>
          <% aboutSubPages.forEach(subPage => { %>
          <li>
            <a href="/about/<%= subPage.slug %>"><%= subPage.title %></a>
          </li>
          <% }) %>
        </ul>
      </section>
      <% } %>

      <% if (!isMain && about) { %>
      <h1><%= about.title %></h1>
      <a href="/about">Back to About</a>
      <section>
        <p><%= about.description %></p>
      </section>
      <% } %>
    </main>
    <%- include('../partials/footer') %>
  </body>
</html>
